{
  "emulators": {
    "auth": {
      "port": 8080
    },
    "firestore": {
      "port": 8081
    },
    "ui": {
      "enabled": true,
      "port": 8082
    },
    "singleProjectMode": true,
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "api",
      "codebase": "api",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}
